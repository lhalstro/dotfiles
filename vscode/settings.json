{
    // This file should be located in:
    //    macOS: `~/Library/Application Support/Code/User/.`
    //    linux: `~/.config/Code/User/.`

    // EXTENSIONS TO INSTALL:
        // Code Languages: Python, Modern Fortran, TCL, Matlab
        // Latex workshop, latex preview?,
        // Remote-SSH,  Code Spell Checker, Diff Folders


    //-------------------------------------------------------------------------
    // GENERAL SETTINGS

    // click muliple cursors with the ctrl/cmd key instead of alt
    "editor.multiCursorModifier": "ctrlCmd",

    // choose which language applies to a file extension
    "files.associations": {
        ".zshrc-custom": "shellscript",  //my custom zshrc addition
        "*.pbs": "shellscript",
        "overlst.i": "perl",       //overlst
        "runovermpi.pbs": "perl",  //overlst
    },


    // macbook pro has really small text, zooming in helps
    "window.zoomLevel": 1,

    // Columns at which to show vertical rulers
    "editor.rulers": [
        // 73,
        80,
    ],

    //-------------------------------------------------------------------------
    // THEME SETTINGS

    // "workbench.iconTheme": "Monokai Pro Icons",
    // "workbench.iconTheme": "Seti",
    "workbench.colorTheme": "Monokai",

    // Change monokai comment color to be something you can actually see
    "editor.tokenColorCustomizations": {
        "[Monokai]": {
            // "comments": "#6A9955"
            "comments": "#a88c57"
        }
    },




    //Trim unneeded whitespace when you save
    "files.trimTrailingWhitespace": true,
    "files.trimFinalNewlines": true,
    "files.insertFinalNewline": true,

    //--------------------------------------------------------------------------
    // SETTINGS FOR INSTALLED EXTENSIONS




    //SETTINGS FOR CODE SPELL CHECKER EXTENSION

    // Specify file types to spell check.
    "cSpell.enabledLanguageIds": [
        "markdown",
        "plaintext",
        "typescript",
        "typescriptreact",
        "yml",
        "latex",
        "bibtex",
        "perl",
        "python",
        "xml"
    ],

    // Enable / Disable the spell checker.
    "cSpell.enabled": true,

    // Display the spell checker status on the status bar.
    "cSpell.showStatus": true,

    // Words to add to dictionary for a workspace.
    "cSpell.words": [],
    "cSpell.enableFiletypes": [
        "python",

    ],
    "cSpell.userWords": [
        "aeropendulum",
        "axisymmetric",
        "crossflow",
        "discretizing",
        "flowfield",
        "freestream",
        "halstrom",
        "heatshield",
        "hiad",
        "hrvip",
        "infeasibly",
        "multigrid",
        "navier",
        "pentadiagonal",
        "rans",
        "retropropulsion",
        "roshko",
        "streamwise",
        "strouhal",
        "uncommanded",
        "uncrewed",
        "urans"
    ],
    "cSpell.ignoreWords": [
    ],
    // After this amount of spelling errors, it wont check anymore
    "cSpell.maxNumberOfProblems": 500,

    // REMOTE SSH
    // When connecting with RSA token, need more time to enter passcodes
    "remote.SSH.connectTimeout": 300,

    //Folder Diff Extension
    "l13Diff.confirmCopy": false,
    "l13Diff.exclude": [
        "**/.DS_Store",
        "**/.git",
        "**/.hg",
        "**/.svn",
        "**/CVS",
        "**/node_modules",
        "**/*~",
        // "**/test", //this is just for overflow dev
        "**/*.bk0"
    ],

    //VS CODE DIFF VIEWER
    "diffEditor.ignoreTrimWhitespace": false,


    // LaTeX Workshop

    //Default view to open latex preview in ("tab" for within VS Code)
    "latex-workshop.view.pdf.viewer": "tab",
    //Autobuild with whatever latex recipe you used last
    "latex-workshop.latex.recipe.default": "lastUsed",
    //this does???
    "latex-workshop.chktex.enabled": true,

    //Recipes for Compiling LaTeX
    "latex-workshop.latex.recipes": [

        {
            "name": "latexmk ðŸ”ƒ",
            "tools": [
                "latexmk"
            ]
        },
        {
            "name": "latexmk (latexmkrc)",
            "tools": [
                "latexmk_rconly"
            ]
        },
        {
            "name": "latexmk (lualatex)",
            "tools": [
                "lualatexmk"
            ]
        },
        {
            "name": "pdflatex âžž bibtex âžž pdflatexâ€ŠÃ—â€Š2",
            "tools": [
                "pdflatex",
                "bibtex",
                "pdflatex",
                "pdflatex"
            ]
        },
        {
            "name": "pdflatex âžž bibtex âžž makeglossaries âžž pdflatexâ€ŠÃ—â€Š2",
            "tools": [
                "pdflatex",
                "bibtex",
                "makeglossaries",
                "pdflatex",
                "pdflatex"
            ]
        },
        {
            "name": "Compile Rnw files",
            "tools": [
                "rnw2tex",
                "latexmk"
            ]
        },
        {
            "name": "Compile Jnw files",
            "tools": [
                "jnw2tex",
                "latexmk"
            ]
        }
    ],
    // latex tools are the actual latex shell commands
    "latex-workshop.latex.tools":[
        {
            "name": "pdflatex",
            "command": "pdflatex",
            "args": [
                "-synctex=1",
                "-interaction=nonstopmode",
                "-file-line-error",
                "%DOC%"
            ]
        },
        {
            "name": "lualatex",
            "command": "lualatex",
            "args": [
                "-synctex=1",
                "-interaction=nonstopmode",
                "-file-line-error",
                "-pdf",
                "%DOC%"
            ]
        },
        {
            "name": "latexmk",
            "command": "latexmk",
            "args": [
                "-synctex=1",
                "-interaction=nonstopmode",
                "-file-line-error",
                "-pdf",
                "%DOC%"
            ]
        },
        {
            "name": "bibtex",
            "command": "bibtex",
            "args": [
                "%DOCFILE%"
            ]
        },
        {
            "name": "makeglossaries",
            "command": "makeglossaries",
            "args": [
              "%DOCFILE%"
            ]
          }
    ],


    // PYTHON
    "python.showStartPage": false, // dont show add when you open python file
    "python.languageServer": "Pylance",
    "workbench.editorAssociations": {
        "*.ipynb": "jupyter-notebook"
    },
    "notebook.cellToolbarLocation": {
        "default": "right",
        "jupyter-notebook": "left"
    },
    // // Set Python Path
    //     // below is only for remote ssh onto pfe:
    // "python.pythonPath": "/nasa/pkgsrc/sles12/2018Q3/bin/python3.7",
    // "python.defaultInterpreterPath": "/nasa/pkgsrc/sles12/2018Q3/bin/python3.7",



    // Where to open files that arent trusted (just open them, `newWindow` is so annoying)
    "security.workspace.trust.untrustedFiles": "open",

    ///////////////////////////

}
